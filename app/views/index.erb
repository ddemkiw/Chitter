<h1>Welcome to Chitter</h1>

Peeps:
  <ul>
    <% @peeps.each do |peep| %>
      <li> <p>Date: <%= peep.timestamp.strftime("%d %b %y %T") if peep.timestamp != nil%></p>
           <p>User:<%= peep.user.username%>
           <p>Peep: <%= peep.text%> </li></p>
    <% end %>
  </ul>



<% if current_user %>
  <div id="new-peep">
    <form action="/peeps" method="post">
      Peep: <input type="text" name="text">
      <input type="submit" value="Peep">
    </form>
  </div>
<% end %>

